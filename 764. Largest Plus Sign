class Solution {
public:
    int orderOfLargestPlusSign(int n, vector<vector<int>>& mines) {
        vector<vector<int>>dp(n,vector<int>(n,n));
        unordered_set<int>st;
        for(int i = 0;i<mines.size();i++){
            int x = mines[i][0];
            int y = mines[i][1];
            st.insert(n * x + y);
        }
        for(int i = 0;i<n;i++){
            int cnt =0;
            for(int j = 0;j<n;j++){
                if(st.find(i * n + j)!=st.end()) cnt = 0;
                else cnt++;
                dp[i][j] = min(dp[i][j], cnt);
            }
            cnt = 0;
            for(int j = n-1;j>=0;j--){
                if(st.find(i * n + j)!=st.end()) cnt = 0;
                else cnt++;
                dp[i][j] = min(dp[i][j], cnt);
            }
        }
        for(int j = 0;j<n;j++){
            int cnt =0;
            for(int i = 0;i<n;i++){
                if(st.find(i * n + j)!=st.end()) cnt = 0;
                else cnt++;
                dp[i][j] = min(dp[i][j], cnt);
            }
            cnt = 0;
            for(int i = n-1;i>=0;i--){
                if(st.find(i * n + j)!=st.end()) cnt = 0;
                else cnt++;
                dp[i][j] = min(dp[i][j], cnt);
            }
        }
        int ans = 0;
        for(int i = 0;i<n;i++){
            for(int j = 0;j<n;j++){
                ans = max(ans,dp[i][j]);
            }
        }
        return ans;
    }
};
