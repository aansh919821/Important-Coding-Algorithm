class Solution {
public:
    int maximumSum(vector<int>& arr) {
        int n = arr.size();
        vector<int>dp0(n), dp1(n);
        dp0[0] = arr[0];
        dp1[0] = -1e9;
        int ans = arr[0];
        for(int i = 1;i<n;i++){
            dp0[i] = max(dp0[i-1] + arr[i], arr[i]);
            dp1[i] = max(dp0[i-1], dp1[i-1] + arr[i]);
            ans = max(ans,max(dp0[i],dp1[i]));
        }
        for(int i = 0;i<n;i++){
            cout<<dp0[i]<<" "<<dp1[i]<<" ";
            cout<<endl;
        }
        return ans;

    }
};

